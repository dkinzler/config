# path and other envs
export PATH=/usr/local/go/bin:$PATH
export ZSH="/home/slartibartfast/.oh-my-zsh"

ZSH_THEME=""

autoload zcalc

# On Ubuntu bat is installed as batcat by default
alias bat="batcat"

# how long to wait for additional key in sequences (in 1/100 sec)
# 10ms
KEYTIMEOUT=1

# FZF
export FZF_DEFAULT_OPTS='--height 40% --layout=reverse --border'
export FZF_DEFAULT_COMMAND='fd --type file --hidden --exclude .git'

